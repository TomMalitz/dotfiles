// custom settings for visual studio code
{
    // window settings
    "window.menuBarVisibility": "compact",

    // extension settings
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    }, 

    //workbench settings
    "workbench.layoutControl.enabled": false,
    "workbench.editor.showTabs": false,
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#4eccb2",
        "editorCursor.background": "#000",
        "terminalCursor.foreground": "#4eccb2",
        "terminalCursor.background": "#000"
    },

    // editor settings 
    "editor.codeActionsOnSave": {

    },
    "editor.fontSize": 12,
    "editor.fontFamily": "JetBrains Mono, Consolas, 'Courier New', monospace",
    "editor.codeLens": false,
    "editor.minimap.enabled": false,

    //terminal settings
    "terminal.integrated.profiles.windows": {
        "pw-7": {
            "path": "c:/Program Files/PowerShell/7/pwsh.exe"
        }
    },
    "terminal.integrated.defaultProfile.windows": "pw-7",   "editor.lineNumbers": "relative",

    // volar settings
    "volar.codeLens.references": false,

    // vim settings 
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": ";",
    "vim.handleKeys": {
        "<C-f>": true,
        "<C-j>": false
    },
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "s"],
            "commands": ["workbench.action.files.save"]
        },
        {
            "before": ["<leader>", "w"],
            "commands": ["workbench.action.splitEditor"]
        },
        {
            "before": ["<leader>", "z"],
            "commands": ["workbench.action.toggleZenMode"]
        },
        {
            "before": ["<space>"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        {
            "before": ["f", "f"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["f", "g"],
            "commands": ["workbench.view.search"]
        },
        {
            "before": ["<leader>", "g"],
            "commands": ["workbench.view.scm"]
        },
        {
            "before": ["K"],
            "commands": ["editor.action.showHover"]
        },
        {
            "before": ["g", "i"],
            "commands": ["editor.action.goToImplementation"]
        }
    ]
}
