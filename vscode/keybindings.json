[
    {
        "key": "ctrl+t",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.terminal.new",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+v",
        "command": "workbench.action.nextPanelView",
        "when": "panelFocus"
    },
    {
        "key": "ctrl+f",
        "command": "workbench.view.explorer"
    },
    {
        "key": "ctrl+g",
        "command": "workbench.view.search"
    },
    {
        "key": "ctrl+x",
        "command": "workbench.view.extensions"
    },
    {
        "key": "ctrl+b",
        "command": "workbench.view.debug",
        "when": "editorFocus || sideBarFocus"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.terminal.focus",
        "when": "!panelFocus"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.togglePanel",
        "when": "panelFocus"
    },
    {
        "key": "space",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "focusedView == workbench.explorer.fileView"
    },
    {
        "key": "ctrl+n",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    {
        "key": "a",
        "command": "explorer.newFile",
        "when": "focusedView == workbench.explorer.fileView && !inputFocus"
    },
    {
        "key": "d",
        "command": "deleteFile",
        "when": "focusedView == workbench.explorer.fileView && !inputFocus"
    },
    {
        "key": "r",
        "command": "renameFile",
        "when": "focusedView == workbench.explorer.fileView && !inputFocus"
    },
    {
        "key": "x",
        "command": "workbench.files.action.collapseExplorerFolders",
        "when": "focusedView == workbench.explorer.fileView && !inputFocus"
    },
    {
        "key": "enter",
        "command": "explorer.openAndPassFocus",
        "when": "focusedView == workbench.explorer.fileView && !inputFocus"
    },
    {
        "key": "enter",
        "command": "list.select",
        "when": "focusedView == workbench.explorer.fileView && explorerResourceIsFolder && !inputFocus"
    }
]
